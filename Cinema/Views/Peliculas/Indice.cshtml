@{
    ViewBag.Title = "Indice";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Indice</h2>
<ul>
    <li>@Html.ActionLink("Ordenar lista películas por nombre", "ResultadoBusqueda", "Peliculas", new { Opc = 1}, null)</li>
    <li>Ordenar lista películas por fecha
        <form class="form-inline" action="/Peliculas/ResultadoBusqueda" method="post">
            <input type="hidden" name="Opc" value="2">
            <div class="form-group mb-2">
                <label>Ingrese año</label>
                <input type="number" class="form-control" name="Anio" placeholder="/YYYY/" required>
            </div>
            <div class="form-group mx-sm-3 mb-2">
                <label>Ingrese mes</label>
                <input type="number" class="form-control" name="Mes" placeholder="/MM/" required>
            </div>
            <button type="submit" class="btn btn-primary mb-2">Aceptar</button>
        </form>
    </li>
    <li>Ordenar películas por género 
        <ul>
            <li>@Html.ActionLink("Acción", "ResultadoBusqueda", "Peliculas", new { Opc = 3 }, null)</li>
            <li>@Html.ActionLink("Animación", "ResultadoBusqueda", "Peliculas", new { Opc = 4 }, null)</li>
            <li>@Html.ActionLink("Ciencia ficción", "ResultadoBusqueda", "Peliculas", new { Opc = 5 }, null)</li>
        </ul>
    </li>
</ul>